.container
  .well.col-sm-6.col-md-4.col-md-offset-4
    = form_for @user_setting, :class => "form-inline" do |f|
      - if @user_setting.errors.any?
        #error_explanation
          %h2= "#{pluralize(@user_setting.errors.count, "error")} prohibited this user_setting from being saved:"
          %ul
            - @user_setting.errors.full_messages.each do |msg|
              %li= msg
      .row.form-group
        %div{:class => "col-sm-10"}
          = f.label "Show thumbnails", :class => "control-label"
          =# f.check_box :show_thumbnails
          = f.text_field :show_thumbnails, :value => "#{@user_setting.show_thumbnails? ? '1' : '0'}", "data-toggle" => "checkbox-x", "data-three-state" => "false", "data-size" => "xl"
      .row.form-group
        %div{:class => "col-sm-10"}
          = f.label "Search table", :class => "control-label"
          %br/
          = f.select :table_name, ["images", "shipments"], {}, {:class => "form-control input-lg"}
      .row.form-group
        %div{:class => "col-sm-10"}
          = link_to "Cancel", "javascript:history.back()", :class => "btn btn-lg btn-default"
          = f.submit "Update", :class => "btn btn-lg btn-primary"