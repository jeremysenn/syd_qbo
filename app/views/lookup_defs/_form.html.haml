.container
  .well.col-sm-6.col-md-4.col-md-offset-4
    = form_for @lookup_def, :class => "form-inline" do |f|
      - if @lookup_def.errors.any?
        #error_explanation
          %h2= "#{pluralize(@lookup_def.errors.count, "error")} prohibited this lookup_def from being saved:"
          %ul
            - @lookup_def.errors.full_messages.each do |msg|
              %li= msg
      = f.hidden_field :FieldName, value: "event_code"
      .row.form-group
        %div{:class => "col-sm-10"}
          = f.label "Table", :class => "control-label"
          = f.select :tableName, ["images", "shipments"], {}, {:class => "form-control input-lg"}
      .row.form-group
        %div{:class => "col-sm-10"}
          = f.label "Value", :class => "control-label"
          %br/
          = f.text_field :LookupValue, placeholder: "Event code", :class => "form-control input-lg"
      .row.form-group
        %div{:class => "col-sm-10"}
          = link_to "Cancel", "javascript:history.back()", :class => "btn btn-lg btn-default"
          = f.submit "Update", :class => "btn btn-lg btn-primary"