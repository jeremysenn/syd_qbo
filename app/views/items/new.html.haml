= render partial: "shared/navbars/new_and_edit_item_navbar", locals: {title: "New item"}
- @title="New item"

.container
  .well.col-sm-6.col-md-4.col-md-offset-4
    %p.lead *Items will be sorted alphabetically. Include unit of measure on the end of item name (e.g. Copper LB).
    = form_tag items_path, :class => "form-horizontal" do
      .row.form-group
        %div{:class => "col-sm-12 col-md-12"}
          = label_tag "Name", nil, :class => 'control-label'
          = text_field_tag "item[name]", nil, :placeholder => "Name", class: "form-control input-lg"
      =# label_tag "Type", nil, :class => 'control-label'
      = hidden_field_tag "item[type]", 'NonInventory'
      =# select_tag "item[type]", options_for_select(['NonInventory']), class: "form-control input-lg", readonly: true
      .row.form-group
        %div{:class => "col-sm-12 col-md-12"}
          = label_tag "Unit of Measure", nil, :class => 'control-label'
          = select_tag "item[purchase_desc]", options_for_select(units_of_measure), prompt: 'Select unit of measure', class: "form-control input-lg"
      .row.form-group
        %div{:class => "col-sm-12 col-md-12"}
          = label_tag "Purchase Cost", nil, :class => 'control-label'
          %div.input-group
            %span.input-group-addon
              $
            = text_field_tag "item[purchase_cost]", nil, :placeholder => "Purchase Cost", class: "form-control input-lg"
      .row.form-group
        %div{:class => "col-sm-12 col-md-12"}
          = label_tag "Expense Account", nil, :class => 'control-label'
          = select_tag "item[expense_account_ref]", options_from_collection_for_select(@accounts, "id", "name"), prompt: "Choose expense account", class: "form-control input-lg", required: true
      %br
      %br
      -#
        .row.form-group
          %div{:class => "col-sm-12 col-md-12"}
            = link_to "Cancel", "javascript:history.back()", :class => "btn btn-lg btn-default btn-block"
      .row.form-group
        %div{:class => "col-sm-12 col-md-12"}
          = button_tag(:type => 'submit', :class => 'btn btn-primary btn-lg btn-block', data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> Create"}) do
            Create

= render partial: "shared/new_item_footer_navbar", locals: {title: "Item"}