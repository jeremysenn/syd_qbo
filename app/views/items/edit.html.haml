.container
  .well.col-sm-6.col-md-4.col-md-offset-4
    = form_tag update_qb_item_path, method: 'get', :class => "form-horizontal" do
      .row.form-group
        %div{:class => "col-sm-12 col-md-12"}
          = label_tag "Name", nil, :class => 'control-label'
          = text_field_tag "item[name]", nil, :placeholder => "Name", value: @item.name, class: "form-control input-lg"
      .row.form-group
        %div{:class => "col-sm-12 col-md-12"}
          = link_to "Cancel", "javascript:history.back()", :class => "btn btn-lg btn-default"
          = button_tag(:type => 'submit', :class => 'btn btn-primary btn-lg') do
            Update

=# render :partial => "form"

