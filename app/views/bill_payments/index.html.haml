= render partial: "shared/navbars/bill_payments_navbar", locals: {title: "Paid"}
- @title="Paid" 

.container
  %p
    .btn-group
      = link_to "Vendors", vendors_path, :class => "btn btn-default btn-lg bill_payment_button", id: 'bills_to_vendors', data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> Vendors"}
      = link_to "Open", purchase_orders_path, :class => "btn btn-default btn-lg bill_payment_button", id: 'bills_to_open', data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> Open"}
      = link_to "Closed", bills_path, :class => "btn btn-default btn-lg bill_payment_button", id: 'bill_payments_to_closed', data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> Closed"}
  %p
    .btn-group
      %button{class: 'btn btn-default btn-lg active'}
        Paid
      = link_to "Items", items_path, :class => "btn btn-default btn-lg bill_payment_button", id: 'bill_payments_to_items', data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> Items"}

  - if @bill_payments.blank?
    .jumbotron
      %p.text-center No payments found
  - else
    %div{id: 'bill_payments'}
      - @bill_payments.sort_by(&:txn_date).reverse.each do |bill_payment|
        %div.row
          .col-xs-12.col-sm-12.col-md-12
            %div.panel.panel-primary
              %div.list_group
                %a{href: bill_payment_path(bill_payment.id), class: "list-group-item bill_payment_button", data: {disable_with: "<i class='fa fa-spinner fa-spin fa-lg'></i> #{bill_payment.doc_number} #{bill_payment.vendor_ref.name}"}}
                  .pull-right
                    &nbsp;
                    %i.fa.fa-chevron-right
                  - if current_user.user_setting.show_bill_payment_thumbnails? and Image.where(ticket_nbr: bill_payment.doc_number, location: current_company_id, event_code: "Gross").count > 0
                    =# image_tag(show_preview_image_image_path(Image.where(ticket_nbr: bill_payment.doc_number, location: current_company_id, event_code: "Gross").last.id), class: 'thumbnail img-responsive')
                    = image_tag(Image.where(ticket_nbr: bill_payment.doc_number, location: current_company_id, event_code: "Gross").last.preview_data_uri, class: 'thumbnail img-responsive')
                  = bill_payment.doc_number
                  = bill_payment.vendor_ref.name unless bill_payment.vendor_ref.blank?
                  .pull-right
                    = number_to_currency(bill_payment.total)
                %a{href: bill_payment_path(bill_payment.id, now: DateTime.now, format: 'pdf'), class: "list-group-item", target: '_blank'}
                  = bill_payment.txn_date.strftime("%m/%d/%y")
                  .pull-right
                    %i.fa.fa-file-pdf-o.fa-lg
                    Print
    %div.row
      .text-center
        %div{id: 'endless_page'}
          %p= image_tag("ajax-loader.gif", :id => "spinner", :alt => "Loading ...", style: "display:none;")
          %p= link_to 'Load more ...', bill_payments_path(:page => @bill_payments.next_page), :class => 'load-more-bill-payments btn btn-default', :remote => true, :onclick => "$(this).hide(); $('#spinner').show();" if @bill_payments.next_page


= render partial: "shared/bill_payments_footer_navbar", locals: {title: "BillPayment"}
