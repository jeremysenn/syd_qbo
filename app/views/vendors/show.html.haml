= render partial: "shared/navbars/show_vendor_navbar", locals: {title: truncate(@vendor.display_name, length: 20)}
- @title="#{@vendor.display_name}" 

.container
  - if not @customer.blank? and @customer.photo_id_warning?
    .alert.alert-warning
      %i.fa.fa-warning.fa-lg
      Vendor Photo ID is missing or expired.
  
  %div.panel.panel-primary
    %div.list_group
      %div.list-group-item
        %strong= "First Name:"
        .pull-right
          = "#{@vendor.given_name}"
      %div.list-group-item
        %strong= "Last Name:"
        .pull-right
          = "#{@vendor.family_name}"
      %div.list-group-item
        %strong= "Company:"
        .pull-right
          = @vendor.company_name
      %div.list-group-item
        %strong= "Display:"
        .pull-right
          = @vendor.display_name

  %div.panel.panel-primary
    %div.list_group
      %div.list-group-item
        %strong= "Height:"
        .pull-right
          = "#{@customer.height}" unless @customer.blank?
      %div.list-group-item
        %strong= "Weight:"
        .pull-right
          = "#{@customer.weight}" unless @customer.blank?
      %div.list-group-item
        %strong= "Eye Color:"
        .pull-right
          = @customer.eye_color unless @customer.blank?
      %div.list-group-item
        %strong= "Hair Color:"
        .pull-right
          =  @customer.hair_color unless @customer.blank?
      %div.list-group-item
        %strong= "Sex:"
        .pull-right
          =  @customer.sex unless @customer.blank?
      %div.list-group-item
        %strong= "Date of Birth:"
        .pull-right
          =  @customer.dob unless @customer.blank?

  %div.panel.panel-primary
    %div.list_group
      %div.list-group-item
        %strong= "License Number:"
        .pull-right
          = "#{@customer.license_number}" unless @customer.blank?
      %div.list-group-item
        %strong= "License Issue:"
        .pull-right
          = "#{@customer.issue_date}" unless @customer.blank?
      %div.list-group-item
        %strong= "License Expiration:"
        .pull-right
          = @customer.expiration_date unless @customer.blank?

  %div.panel.panel-primary
    %div.panel-body
      %strong= "Address:"
      - unless @vendor.billing_address.blank?
        %p
          = @vendor.billing_address.line1
          %br
          - unless @vendor.billing_address.line2.blank?
            = @vendor.billing_address.line2
            %br
          = @vendor.billing_address.city
          = @vendor.billing_address.country_sub_division_code
          = @vendor.billing_address.postal_code
      - else
        %p None
  %div.panel.panel-primary
    %div.list_group
      %div.list-group-item
        %strong= "Email:"
        .pull-right
          = mail_to @vendor.primary_email_address.address unless @vendor.primary_email_address.blank?
      %div.list-group-item
        %strong= "Phone:"
        .pull-right
          = @vendor.primary_phone.free_form_number unless @vendor.primary_phone.blank?
      %div.list-group-item
        %strong= "Employer Phone:"
        .pull-right
          = @customer.employer_phone unless @customer.blank?
      %div.list-group-item
        %strong= "Balance:"
        .pull-right
          = number_to_currency(@vendor.balance)
  %hr
  %div#cust_pics
    %div{id: 'endless_page'}
      %p= image_tag("ajax-loader.gif", :id => "more_images_spinner", :alt => "Loading ...", style: "display:none;")
      %p= link_to 'More pictures ...', cust_pics_path(:page => nil, :q => {cust_nbr_eq: @vendor.id, location_eq: current_user.location}), :class => 'load-more-cust-pics btn btn-default', :remote => true, :onclick => "$(this).hide(); $('#more_images_spinner').show();"

= render partial: "shared/vendor_footer_navbar", locals: {title: "Vendor"}