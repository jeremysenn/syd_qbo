= form_for @jpegger_contract do |f|
  - @jpegger_contract.errors.each do |attr, msg|
    .alert.alert-danger
      <button type="button" class="close" data-dismiss="alert">Ã—</button>
      = "#{attr} #{msg}" if @jpegger_contract.errors[attr].first == msg
  = f.hidden_field :contract_id, value: current_user.location
  .well
    .row.form-group
      %div{:class => "col-sm-12"}
        = f.label :contract_name, :class => "control-label"
        = f.text_field :contract_name, :placeholder => "Contract Name", class: "form-control input-lg"
    .row.form-group
      %div{:class => "col-sm-12"}
        = f.label :text1, :class => "control-label"
        = f.text_area :text1, :placeholder => "Text 1", rows: 10, class: "form-control input-lg"
    .row.form-group
      %div{:class => "col-sm-12"}
        = button_tag(:type => 'submit', :class => 'btn btn-primary btn-lg btn-block', data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> Save"}) do
          Save