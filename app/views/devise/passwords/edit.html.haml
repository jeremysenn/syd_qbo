.container
  .well.col-sm-6.col-md-4.col-md-offset-4
    = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f|
      = devise_error_messages!
      = f.hidden_field :reset_password_token
      .row.form-group
        %div{:class => "col-sm-12 col-md-12"}
          = f.label :password, "New password"
          %br/
          = f.password_field :password, autofocus: true, autocomplete: "off", class: "form-control input-lg"
      .row.form-group
        %div{:class => "col-sm-12 col-md-12"}
          = f.label :password_confirmation, "Confirm new password"
          %br/
          = f.password_field :password_confirmation, autocomplete: "off", class: "form-control input-lg"
      .row
        %div{:class => "col-sm-12 col-md-12"}
          = f.submit "Change my password", :class => "btn btn-block btn-lg btn-primary"
    %p
      %br
      = render "devise/shared/links"