.container
  .well.col-sm-6.col-md-4.col-md-offset-4
    = form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
      = devise_error_messages!
      .row.form-group
        %div{:class => "col-sm-12 col-md-12"}
          = f.label :email, :class => "control-label"
          %br/
          = f.email_field :email, :placeholder => "Email", :class => "form-control input-lg", value: params[:email], autofocus: true
      .row.form-group
        %div{:class => "col-sm-12 col-md-12"}
          = f.label :password, :class => "control-label"
          %br/
          = f.password_field :password, :placeholder => "Password", :class => "form-control input-lg"
      .row.form-group
        %div{:class => "col-sm-12 col-md-12"}
          = f.label :password_confirmation, :class => "control-label"
          %br/
          = f.password_field :password_confirmation, :placeholder => "Password confirmation", :class => "form-control input-lg"
      .row
        %div{:class => "col-sm-12 col-md-12"}
          = f.submit "Sign up", :class => "btn btn-block btn-lg btn-primary"
      %p
        %br
        = render "devise/shared/links"