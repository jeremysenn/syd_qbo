%div{:id => "signature_form", :class => "modal fade", :tabindex => "-1", :style => "display:none;"}
  = form_for ImageFile.new do |f|
    .modal-dialog
      .modal-content
        .modal-body
          = f.hidden_field :user_id, value: current_user.id
          = f.hidden_field :ticket_number, value: @doc_number
          = f.hidden_field :event_code, value: 'SIG'
          .form-group
            .sigPad
              %div.sigNav
                .clearButton
                  %a{href: "#clear", class: 'pull-right'} Clear
              .sig.sigWrapper
                .typed
                %canvas.pad{height: "85", width: "498"}
                %input.output{name: "output", type: "hidden"}/
        .modal-footer
          = button_tag(:type => 'submit', :class => 'btn btn-primary btn-lg', id: "new_image_file_submit", data: { disable_with: "Please wait..." }) do
            I accept the terms of this agreement
