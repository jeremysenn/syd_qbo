    .navbar-header
      %div{class: 'navbar-brand navbar-center'}
        .col-xs-4.col-sm-4
          = link_to 'javascript:history.back()' do
            %i.fa.fa-arrow-left.fa-lg
        .col-xs-4.col-sm-4
          = title
        .col-xs-4.col-sm-4
          -#
            %a{href: "#new_purchase_order_form", "data-toggle" => "modal", :alt => "new_purchase_order_form"}
          %a{href: '#', id: 'new_ticket_navbar_link', data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> Ticket"}}
            %i.fa.fa-plus.fa-lg
            = "Ticket" unless mobile_device?
          -#
            %a{href: new_purchase_order_path}
              %i.fa.fa-plus.fa-lg
              = "New" unless mobile_device?

= render partial: "purchase_orders/new_modal"