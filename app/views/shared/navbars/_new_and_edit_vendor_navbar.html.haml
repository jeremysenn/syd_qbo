.navbar.navbar-default.navbar-fixed-top{ role: 'navigation'}
  .container-fluid
    .navbar-header
      %div{class: 'navbar-brand navbar-center'}
        .col-xs-4.col-sm-4
          = link_to "Cancel", vendors_path
          -#
            = link_to 'javascript:history.back()' do
              Cancel
        .col-xs-4.col-sm-4
          = title
        .col-xs-4.col-sm-4
          - if params[:controller]=='vendors' and params[:action]=='show'
            %a{href: '#', id: 'new_ticket_navbar_link'}
              %i.fa.fa-plus.fa-lg
              = "Ticket" unless mobile_device?
          -#
            = image_tag("ajax-loader-gray-background.gif", :id => "spinner", :alt => "Loading ...", style: "display:none;")
            = link_to 'Done', '#', onclick: "$(this).hide(); $('#spinner').show(); $('#purchase_order_form').submit();"

- if params[:controller]=='vendors' and params[:action]=='show'
  = render partial: "purchase_orders/quick_new_purchase_order"