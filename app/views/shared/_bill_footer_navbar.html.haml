.navbar.navbar-default.navbar-fixed-bottom{ role: 'navigation'}
  .container-fluid
    .navbar-header
      %div{class: 'navbar-brand navbar-center'}
        .col-xs-3.col-sm-3
          %a{href: root_path}
            %i.fa.fa-home.fa-lg
            = "Home" unless mobile_device?
        .col-xs-3.col-sm-3
          - current_user.finger_print_reader_devices.each do |finger_print_reader_device|
            %a{href: '#', class: 'finger_print_trigger', 'data-device-id' => finger_print_reader_device.id, 'data-ticket-number' => @doc_number, 'data-company-id' => current_company.id}
              %i.fa.fa-hand-pointer-o.fa-lg
              = "Reader" unless mobile_device?
        .col-xs-3.col-sm-3
          -# 
            if params[:controller] == "images" or params[:controller] == "shipments"
          %a{href: "#upload_form", "data-toggle" => "modal", :alt => "new_image_file_form"}
            %i.fa.fa-camera.fa-lg
            = "Picture" unless mobile_device?
        .col-xs-3.col-sm-3
          %a{href: "#signature_form", "data-toggle" => "modal", :alt => "new_signature_form"}
            %i.fa.fa-pencil.fa-lg
            = "Sign" unless mobile_device?
          -#
            %a{href: "#{current_user.images_table? ? images_path(today: true) : shipments_path(today: true)}"}
              %i.fa.fa-calendar-o.fa-lg
              = "Today" unless mobile_device?

= render partial: "#{current_user.user_setting.table_name.singularize}_files/upload_modal"
= render partial: "#{current_user.user_setting.table_name.singularize}_files/signature_modal"