.panel.panel-default.line-item
  %div.panel-heading{:role => "tab", id: "heading#{index}"}
    %h4.panel-title
      %ul{class: 'list-inline'}
        %li
          %a.line_item_name.text-success{"aria-controls" => "collapse#{index}", "aria-expanded" => "true", "data-toggle" => "collapse", :href => "#collapse_#{index}", :role => "button", class: 'bill_item_collapse_link'}
            Choose an item*
        %li.pull-right
          %a{href: '#', class: 'remove_field'}
            %i.fa.fa-trash.fa-lg.text-danger
      = hidden_field_tag :item_description, nil
  %div.panel-collapse{id: "collapse_#{index}", "aria-labelledby" => "headingitem", :role => "tabpanel", class: "collapse in"}
    .panel-body
      =# select_tag "bill[line_items][][item]", options_from_collection_for_select(@items, "id", "name"), prompt: 'Choose an item' , class: "form-control input-lg item_select", required: true
      = select_tag "bill[line_items][][item]", "", class: "form-control input-lg item_select", required: true
      %br
      %div.input-group
        %span.input-group-addon
          %i.fa.fa-plus{style: "font-size:0.7em;"}
        = phone_field_tag "bill[line_items][][gross]", 0, :placeholder => "Gross", class: "form-control input-lg amount-calculation-field"
      %br
      %div.input-group
        %span.input-group-addon
          %i.fa.fa-minus{style: "font-size:0.7em;"}
        = phone_field_tag "bill[line_items][][tare]", 0, :placeholder => "Subtract", class: "form-control input-lg amount-calculation-field"
      %br
      = hidden_field_tag "bill[line_items][][quantity]", nil, :placeholder => "Net", class: "form-control input-lg amount-calculation-field", required: true, readonly: true
      %div.input-group
        %span.input-group-addon
          %i.fa.fa-dollar.fa-lg
        = text_field_tag "bill[line_items][][rate]", nil, :placeholder => "Rate", class: "form-control input-lg amount-calculation-field", required: true
      = hidden_field_tag "bill[line_items][][amount]", nil, :placeholder => "Amount", class: "form-control input-lg amount", required: true, readonly: true
  %div.panel-footer
    %ul{class: 'list-inline'}
      %li.calculation_details
      %li.pull-right
        %a.text-success{"aria-controls" => "collapse#{index}", "data-toggle" => "collapse", :href => "#collapse_#{index}", class: 'pull-right bill_item_collapse_link' }
          %i.fa.fa-check-square.fa-3x.collapse_icon