- @open_bills.sort_by(&:txn_date).reverse.each do |bill|
  %div.row
    .col-xs-12.col-sm-12.col-md-12
      %div.panel.panel-primary
        %div.list_group
          %a{href: edit_bill_path(bill.id), class: "list-group-item bill_button", data: {disable_with: "<i class='fa fa-spinner fa-spin fa-lg'></i> #{bill.doc_number} #{bill.vendor_ref.name}"}}
            .pull-right
              &nbsp;
              %i.fa.fa-chevron-right
            - if current_user.user_setting.show_bill_thumbnails? and Image.where(ticket_nbr: bill.doc_number, location: current_company_id, event_code: "Gross").count > 0
              =# image_tag(show_preview_image_image_path(Image.where(ticket_nbr: bill.doc_number, event_code: "Gross").last.id), class: 'thumbnail img-responsive')
              = image_tag(Image.where(ticket_nbr: bill.doc_number, location: current_company_id, event_code: "Gross").last.preview_data_uri, class: 'thumbnail img-responsive')
            = bill.doc_number
            = bill.vendor_ref.name unless bill.vendor_ref.blank?
            .pull-right
              = number_to_currency(bill.balance)
          %div.list-group-item
            = bill.txn_date.strftime("%m/%d/%y")
            .pull-right
              %a.btn.btn-primary{class: "", "data-content" => "#{render partial: 'more_bill_options', locals: {bill: bill}}", "data-placement" => 'left', "data-html" => "true", "data-toggle" => "popover", :role => "button", :tabindex => "0", title: "Print or Pay"}
                More
            %br
            %br

